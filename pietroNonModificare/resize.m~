%% questa classe si occupa dio fare una resize a delle dimensioni standard da decidere , per ora 1000, di un immagine presa in input
function imageResized = resize (imageOriginal)
    resized = NaN;
    [x,y,~] = size(imageOriginal);
    
    %fondamentale che imresize mantiene le proporzioni
    resized = NaN;
    if (x > 1000)
        resized = imresize(imageOriginal, [1000 NaN]);
    end
    if (y > 1000)
        resized = imresize(imageOriginal, [NaN 1000]);
    end
    if (~isnan(resized))
        [hr, ~] = size (resized);
    else
        resized = imageOriginal;
        hr=1; %manteniamo la scala originale 
    end 
    ratio = x/hr;
    imageResized = resized;
end
